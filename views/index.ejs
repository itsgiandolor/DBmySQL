<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <head>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
<body>
  <%- include("./partials/nav.ejs") %>

  <div class="blogsContent">
    <h1><%= title %></h1>

    <!-- Search Bar -->
    <form action="/patient/search" method="GET" class="search-form">
      <input type="text" name="query" placeholder="Search patient..." class="search-input">
      <button type="submit" class="search-button">Search</button>
    </form>

    <!-- Summary -->
    <div class="summary">
      <h3>Total Patients: <%= patient.length %></h3>
    </div>

    <!-- Table Layout Only -->
    <table class="patients-table">
      <thead>
        <tr>
          <th>Last Name</th>
          <th>First & Middle Name</th>
          <th>Contact No</th>
          <th>Next Appointment</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% patient.forEach(patient => { %>
          <tr class="clickable-row" data-id="<%= patient.id %>">
            <td><%= patient.last_name %></td>
            <td><%= patient.first_name %> <%= patient.middle_name %></td>
            <td><%= patient.contact_no %></td>
            <td><%= patient.next_appointment || 'None' %></td>
            <td>
              <a class="edit" href="/patient/<%= patient.id %>/edit" onclick="event.stopPropagation()">Edit</a>
              <a class="delete" href="/patient/<%= patient.id %>/delete" onclick="event.stopPropagation()">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <!-- Pagination (if used) -->
    <% if (totalPages && totalPages > 1) { %>
      <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <a href="?page=<%= i %>" class="page-link"><%= i %></a>
        <% } %>
      </div>
    <% } %>
  </div>

  <%- include("./partials/footer.ejs") %>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const rows = document.querySelectorAll('.clickable-row');
      rows.forEach(row => {
        row.addEventListener('click', () => {
          const id = row.getAttribute('data-id');
          window.location.href = `/patient/${id}`;
        });
      });
    });
  </script>

</body>
</html>
